<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="mainPane" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ufv.project.controller.fx.CreatePOCControllerFX">

    <fx:include source="top-menu-page-view.fxml" />

    <fx:include source="personal-info-page-view.fxml" />
    <HBox>
        <Label styleClass="title" text="Create POC" />
        <VBox.margin>
            <Insets left="60.0" />
        </VBox.margin>
    </HBox>
    <ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="520.0" styleClass="scroll-pane">
        <GridPane fx:id="gridPane" prefWidth="520.0" styleClass="create-background" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <VBox>
                <Label styleClass="create-label" text="Title" />
                <TextField fx:id="title" styleClass="create-text-field">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </TextField>
                <padding>
                    <Insets left="10.0" top="10.0" />
                </padding>
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label styleClass="create-label" text="Field" />
                <ComboBox fx:id="fieldComboBox" promptText="Choose..." styleClass="create-combo-box">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </ComboBox>
                <padding>
                    <Insets left="10.0" top="10.0" />
                </padding>
            </VBox>
            <VBox GridPane.columnIndex="2">
                <Label styleClass="create-label" text="Author(s)" />
                <MenuButton fx:id="authorMenuButton" onHiding="#onSelectAuthors" styleClass="create-menu-button" text="Choose...">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </MenuButton>
                <padding>
                    <Insets left="10.0" top="10.0" />
                </padding>
            </VBox>
            <VBox GridPane.rowIndex="1">
                <Label styleClass="create-label" text="Advisor" />
                <ComboBox fx:id="advisorComboBox" promptText="Choose..." styleClass="create-combo-box">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </ComboBox>
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label styleClass="create-label" text="Co-Advisors" />
                <MenuButton fx:id="coAdvisorMenuButton" onHiding="#onSelectCoAdvisors" styleClass="create-menu-button" text="Choose...">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </MenuButton>
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
            </VBox>
            <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
                <Label styleClass="create-label" text="Registrant" />
                <ComboBox fx:id="registrantComboBox" promptText="Registrant" styleClass="create-combo-box">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </ComboBox>
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
            </VBox>
            <VBox GridPane.rowIndex="2">
                <Label styleClass="create-label" text="Defense Date" />
                <DatePicker fx:id="datePicker" editable="false" styleClass="date-picker">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </DatePicker>
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label styleClass="create-label" text="PDF" />
                <Button onMouseClicked="#handlePDFChoosing" styleClass="pdf-button" text="Choose...">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Button>
                <Text fx:id="pdfFilepathText" styleClass="pdf-text" text="...">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Text>
                <padding>
                    <Insets left="20.0" top="5.0" />
                </padding>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
                <Label styleClass="create-label" text="Keywords" />
                <TextArea fx:id="keywordsTextArea" prefHeight="100.0" styleClass="create-text-area">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </TextArea>
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
                <GridPane.margin>
                    <Insets bottom="10.0" />
                </GridPane.margin>
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Label styleClass="create-label" text="Summary" />
                <TextArea fx:id="summaryTextArea" prefHeight="100.0" styleClass="create-text-area">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </TextArea>
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
                <GridPane.margin>
                    <Insets bottom="10.0" />
                </GridPane.margin>
            </VBox>
            <Button fx:id="addPOCButton" onMouseClicked="#handlePOCAdding" styleClass="add-button" text="Add POC" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets left="10.0" />
                </GridPane.margin>
            </Button>
            <padding>
                <Insets left="10.0" />
            </padding>
            <padding>
                <Insets left="10.0" right="20.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="40.0" left="40.0" right="40.0" top="5.0" />
            </VBox.margin>
            <columnConstraints>
                <ColumnConstraints prefWidth="170.0" />
                <ColumnConstraints prefWidth="170.0" />
                <ColumnConstraints prefWidth="180.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints prefHeight="250.0" />
            </rowConstraints>
        </GridPane>
      <VBox.margin>
         <Insets bottom="40.0" left="40.0" right="40.0" />
      </VBox.margin>
    </ScrollPane>
    <ProgressIndicator fx:id="progressIndicator" styleClass="progress-indicator"/>
    <stylesheets>
        <URL value="@../css/create-poc-page-styles.css" />
    </stylesheets>
</VBox>
