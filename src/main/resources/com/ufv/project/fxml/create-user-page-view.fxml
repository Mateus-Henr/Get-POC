<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<FlowPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:id="mainPane"
          fx:controller="com.ufv.project.controller.CreateUserController"
          prefHeight="400.0" prefWidth="600.0">
    <Label text="Username"/>
    <TextField fx:id="usernameTextField"/>

    <Label text="Name"/>
    <TextField fx:id="nameTextField"/>

    <Label text="Password"/>
    <PasswordField fx:id="passwordField"/>

    <Label text="Confirm password"/>
    <PasswordField fx:id="confirmPasswordField"/>

    <RadioButton fx:id="professorRadioButton" selected="true" onMouseClicked="#onRadioButtonChanged" text="Professor">
        <HBox.margin>
            <Insets right="3.0"/>
        </HBox.margin>
        <toggleGroup>
            <ToggleGroup fx:id="group"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="studentRadioButton" onMouseClicked="#onRadioButtonChanged" text="Student">
        <HBox.margin>
            <Insets right="30.0"/>
            <Insets bottom="10.0"/>
        </HBox.margin>
        <toggleGroup>
            <fx:reference source="group"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="adminRadioButton" onMouseClicked="#onRadioButtonChanged" text="Admin">
        <HBox.margin>
            <Insets right="30.0"/>
            <Insets bottom="10.0"/>
        </HBox.margin>
        <toggleGroup>
            <fx:reference source="group"/>
        </toggleGroup>
    </RadioButton>
    <TextField fx:id="emailTextField"/>
    <TextField fx:id="registrationTextField"/>
    <MenuButton fx:id="professorSubjects"/>
    <Button fx:id="createUserButton" text="Create"/>
</FlowPane>
